{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["*.test.js", "*.config.js", "*.spec.js", "*.d.js"],
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/no-unresolved": "off",
        "arrow-parens": "off"
    }
}
